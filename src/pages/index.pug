    include var
      //
    include mixin
    link(href='https://fonts.googleapis.com/css?family=Roboto&display=swap' rel='stylesheet')
    head
    meta(charset='utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title Webpack app
    body
        // header start
