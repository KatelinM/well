        // header end
        //hero start
        section.section.section_hero.hero.go_to#top
            .section__container
                h3.title Сочи
                    span.title_big Апартаменты 1
        //hero end
        //main start
        section.section_main.main
            .section__container
                div.main__item.aside
                    .tab(class='tab-menu')
                        input(id='menu')(type='checkbox')
                        label.tab-label(for='menu') Уведомлния
                            svg(class='tab-label__icon' width='8', height='5', fill='none', xmlns='http://www.w3.org/2000/svg')
                                path(d='M4 5L7.464.5H.536L4 5z', fill='#000', fill-opacity='.2')
                        .tab-content
                            .tab-content__text
                                +linkList([
                                    {link: 'https://wellyes.ru', name: 'Документы'},
                                    {link: 'https://wellyes.ru', name: 'План'},
                                    {link: 'https://wellyes.ru', name: 'Оплата'},
                                    {link: 'https://wellyes.ru', name: 'Инструкция'}
                                ])

                    div.products
                        each product in products
                            .product
                                h4.product__label #{product.label}
                                p.product__description #{product.adress}
                                a(class='product__link', target='__blank' href='https://wellyes.ru') Перейти
                                    svg(class='product__icon' width='20' height='20' fill='none' xmlns='http://www.w3.org/2000/svg')
                                        path(d='M10 0a10 10 0 1 0 0 20 10 10 0 0 0 0-20zm0 19.333A9.334 9.334 0 1 1 10 .665a9.334 9.334 0 0 1 0 18.668z' fill='#FFC000')
                                        path(d='M8.696 5.376l-.003-.003c-.134-.112-.32-.116-.44.003-.111.113-.141.322.002.444l4.17 4.19-4.17 4.17a.29.29 0 0 0-.003.442c.054.075.15.095.213.095a.33.33 0 0 0 .231-.093L13.1 10.22a.322.322 0 0 0 0-.442L8.696 5.376z' fill='#FFC000' stroke='#FFC000' stroke-width='.1')

                div.main__item.notifications
                    h2.notifications__label Уведомления
                    each note, i in notes
                        .note
                            time.note__time #{note.date}
                            .tab(class='tab-note')
                                input(id='note' + i)(type='checkbox')
                                label.tab-label(for='note' + i) #{note.label}
                                    svg(class='tab-label__icon' , width='20', height='20', viewbox='0 0 20 20', fill='none', xmlns='http://www.w3.org/2000/svg')
