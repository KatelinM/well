                                .tab-content
                                    .tab-content__text #{note.text}

                    //main end
                    //news start
        section.section.section_news.news
            .swiper-container
                .swiper-wrapper
                    each item in news
                        a.swiper-slide(href=item.link)
                            data.news_data #{item.date}
                            - if(item.action)
                                span.label_action Акция
                            -else
                                span.label_news Новости
                            p.text #{item.text}
                //Add Pagination
                .swiper-pagination
        //news end
         //footer start
        footer.section_footer.footer
            .section__container
                .footer__contacts.contacts
                    .contacts__icons
                        a(class='contacts__link', target='__blank' href='https://wellyes.ru')
                            include ../images/facebook.svg
                        a(class='contacts__link', target='__blank' href='https://wellyes.ru')
                            include ../images/twitter.svg
                        a(class='contacts__link', target='__blank' href='https://wellyes.ru')
                            include ../images/telegram.svg
                        a(class='contacts__link', target='__blank' href='https://wellyes.ru')
                            include ../images/instagram.svg
                        a(class='contacts__link', target='__blank' href='https://wellyes.ru')
                            include ../images/pinteres.svg

                    a(class='contacts__phone', href= 'tel:'+phone) #{phone}
                    p.contacts__adress #{adress}
                    a(class='contacts__mail', href='mailto:'+mail) #{mail}
                .footer__nav
                    - var footerSection1 = [{link: 'https://wellyes.ru', name: 'Подраздел 1'},{link: 'https://wellyes.ru', name: 'Подраздел 2'},{link: 'https://wellyes.ru', name: 'Подраздел 3'},{link: 'https://wellyes.ru', name: 'Подраздел 4'},{link: 'https://wellyes.ru', name: 'Подраздел 5'}]
                    +tab(2, 'Раздел 1',footerSection1, 'tab_black-arrow', '../images/close.svg')

                    - var footerSection2 = [{link: 'https://wellyes.ru', name: 'Подраздел 1'},{link: 'https://wellyes.ru', name: 'Подраздел 2'},{link: 'https://wellyes.ru', name: 'Подраздел 3'},{link: 'https://wellyes.ru', name: 'Подраздел 4'},{link: 'https://wellyes.ru', name: 'Подраздел 5'}]
                    +tab(3, 'Раздел 2', footerSection2, 'tab_black-arrow', '../images/close.svg')

                    - var footerSection3 = [{link: 'https://wellyes.ru', name: 'Подраздел 1'},{link: 'https://wellyes.ru', name: 'Подраздел 2'},{link: 'https://wellyes.ru', name: 'Подраздел 3'},{link: 'https://wellyes.ru', name: 'Подраздел 4'},{link: 'https://wellyes.ru', name: 'Подраздел 5'}]
                    +tab(4, 'Раздел 3', footerSection3, 'tab_black-arrow', '../images/close.svg')
